{
    "name": "decodelabs/enlighten",
    "description": "PHP source highlighter",
    "type": "library",
    "keywords": ["php", "source", "highlighter", "html"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^7.2|^8.0",

        "decodelabs/coercion": "^0.1",
        "decodelabs/exceptional": "^0.3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "decodelabs/phpstan-decodelabs": "^0.5",
        "symplify/easy-coding-standard": "^10"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Enlighten\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.8.x-dev"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "psr12": "ecs check --no-progress-bar",
        "psr12-fix": "ecs check --no-progress-bar --fix"
    }
}
