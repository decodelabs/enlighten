{
    "name": "decodelabs/enlighten",
    "description": "PHP source highlighter",
    "type": "library",
    "keywords": [ "php", "source", "highlighter", "html" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",

        "decodelabs/coercion": "^0.2.15",
        "decodelabs/exceptional": "^0.5.2"
    },
    "require-dev": {
        "decodelabs/phpstan-decodelabs": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Enlighten\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.9.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
